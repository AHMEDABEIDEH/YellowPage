<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My User Application</title>

    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/icon-bar.css" rel="stylesheet" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" />

    <link href="~/Content/css/style.css" rel="stylesheet" />

    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />


</head>
<body>
    <!-- header section strats -->
    <header class="header_section">
        <div class="container">
            <nav class="navbar navbar-expand-lg custom_nav-container">
                <a class="navbar-brand" href="https://www.iku.edu.tr/">
                    <span>
                        <img src="~/Content/images/Group 1.svg" alt="logo" />
                    </span>
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="fas fa-bars"
                           style="color: rgb(214, 73, 18); font-size: 28px"></i>
                    </span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item active">
                            <a class="nav-link" @Html.ActionLink("Home", "Index", "Home") </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">ABOUT US</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#Footer">CONTACT US</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="https://www.iku.edu.tr/">F.A.Q</a>
                        </li>
                    </ul>
                    <div class="user_option">

                        @Html.Partial("_loginPartial")
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="header_line"> </div>


    <div>
        @RenderBody()
    </div>

    <section id="about" class="about_section layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="img-box">

                        <img src="~/Content/images/Papirus-Team-Papirus-Apps-Accessories-notes.svg" alt="about-us" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="detail-box">
                        <div class="heading_container">
                            <h2>YELLOWPAGE.COM</h2>
                        </div>
                        <p>
                            There are many variations of passages of Lorem Ipsum available,
                            but the majority have suffered alteration in some form, by
                            injected humour, or randomised words which don't look even
                            slightly believable. If you are going to use a passage of Lorem
                            Ipsum, you need to be sure there isn't anything embarrassing
                            hidden in the middle of text. All
                        </p>
                        <a href=""> Read More </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- footer section -->

    <footer id="Footer" class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-col">
                    <div class="footer_contact">
                        <h4>Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="https://www.iku.edu.tr/tr/istanbulkulturuniversitesi">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span> Call 212 1234567890 </span>
                            </a>
                            <a href="https://www.iku.edu.tr/tr/istanbulkulturuniversitesi">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span> </span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <div class="footer_detail">
                        <a href="https://www.iku.edu.tr/tr/istanbulkulturuniversitesi"
                           class="footer-logo">
                            <img src="~/Content/images/Group 1.svg" alt="logo" />
                        </a>
                        <p>
                            Necessary, making this the first true generator on the Internet.
                            It uses a dictionary of over 200 Latin words, combined with
                        </p>
                        <div class="footer_social">
                            <a href="https://www.iku.edu.tr/tr/istanbulkulturuniversitesi">
                                <img src="~/Content/images/whatsapp.png" />
                            </a>
                            <a href="https://www.iku.edu.tr/tr/istanbulkulturuniversitesi">
                                <img src="~/Content/images/twitter.png" />
                            </a>
                            <a href="https://www.iku.edu.tr/tr/istanbulkulturuniversitesi">
                                <img src="~/Content/images/instagram.png" />
                            </a>
                            <a href="https://www.iku.edu.tr/tr/istanbulkulturuniversitesi">
                                <img src="~/Content/images/linkedin.png" />
                            </a>
                            <a href="https://www.iku.edu.tr/tr/istanbulkulturuniversitesi">
                                <img src="~/Content/images/pinterest.png" />
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <a href="https://www.iku.edu.tr/tr/istanbulkulturuniversitesi">
                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                        <span> Location </span>
                    </a>
                    <div class="col-md-6">
                        <div class="map_container">
                            <div id="googleMap"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <!-- jQery -->
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <!-- popper js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.js"></script>
    <!-- owl slider -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <!-- isotope js -->
    <script src="https://unpkg.com/isotope-layout@3.0.4/dist/isotope.pkgd.min.js"></script>
    <!-- nice select -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js"></script>
    <!-- custom js -->
    <script src="~/js/custom.js"></script>
    <!-- Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap"></script>


</body>

<!-- End Google Map -->

</html>
