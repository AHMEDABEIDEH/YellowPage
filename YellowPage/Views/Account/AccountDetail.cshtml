@model IEnumerable<YellowPage.DBModel.User>

@{
    ViewBag.Title = "AccountDetail";
}
<head>
    <link href="~/Content/css/navigation.css" rel="stylesheet" />

    <style>
        .main-header {
            margin-top: 20px;
            text-align: center;
        }

        .main-table {
            margin-top: 20px;
            text-align: center;
            margin-bottom: 300px;
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<div class="topnav">
    <a class="active" href="@Url.Action("AddBusiness", "Business")"><span>Add Business</span></a>
    <a href="@Url.Action("ViewRequests", "Request")"><span>View Requests</span></a>
    <a href="@Url.Action("ReportDetail", "Report")"><span>View Reports</span></a>
    <a href="@Url.Action("ReviewDetail", "Review")"><span>View Reviews</span></a>
    
    <a href="@Url.Action("SuggestionDetail", "Suggestion")"><span>View Suggestion</span></a>
    <a href="@Url.Action("BusinessDetail", "Com")"><span>View Businesses</span></a>
</div>

<h2 class="main-header">AccountDetail</h2>






<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>

                @Html.ActionLink("Update", "UpdateAccount", new { id = item.UserId }) |


                @Html.ActionLink("Delete", "DeleteAccount", new { id = item.UserId })
            </td>
        </tr>
    }

</table>
